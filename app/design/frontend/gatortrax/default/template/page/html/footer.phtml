<script>

jQuery('.gallery-images').each(function(){
	if(jQuery(this).children('ul').children('li').length == 1 ) {
		jQuery(this).children('ul').children('li').addClass('single-list-item');
		jQuery(this).children('ul').children('li:nth-child(2n)').after('<div class="clear-wrap"></div>');
	} else if(jQuery(this).children('ul').children('li').length % 2 == 0) {
		jQuery(this).children('ul').children('li').addClass('even-list-item');
		jQuery(this).children('ul').children('li:nth-child(2n)').after('<div class="clear-wrap"></div>');
	}else {
		jQuery(this).children('ul').children('li').addClass('odd-list-item');
		jQuery(this).children('ul').children('li:nth-child(3n)').after('<div class="clear-wrap"></div>');
	}
	jQuery(this).children('ul').children('li:last-child').after('<div class="clear-wrap"></div>')
});

jQuery('.locations-list').each(function(){
	if(jQuery(this).children('ul').length % 2 == 0) {
		jQuery(this).children('ul').addClass('even-list-item');
		jQuery(this).children('ul:nth-child(2n)').after('<div class="clear-wrap"></div>');
	}else {
		jQuery(this).children('ul').addClass('odd-list-item');
		jQuery(this).children('ul:nth-child(3n)').after('<div class="clear-wrap"></div>');
	}
	jQuery(this).children('ul:last-child').after('<div class="clear-wrap"></div>')
});



</script>
